<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.dcc.crosswordscan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/crosswordscan_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.dcc.crosswordscan.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.dcc.crosswordscan.ScanActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_scan"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="edu.dcc.crosswordscan.NamePuzzleActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_name_puzzle"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="edu.dcc.crosswordscan.PuzzleListActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_puzzle_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.dcc.crosswordscan.CompletePuzzleActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_complete_puzzle"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.dcc.crosswordscan.PuzzleInfoActivity"
            android:configChanges="orientation"
            android:label="@string/puzzle_info"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>